<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>AddFilmServlet</servlet-name>
        <servlet-class>jee.javapack.servlets.AddFilmServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddFilmServlet</servlet-name>
        <url-pattern>/addFilm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpDateFilms</servlet-name>
        <servlet-class>jee.javapack.servlets.UpDateFilms</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpDateFilms</servlet-name>
        <url-pattern>/UpDateFilms</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>DeleteFilm</servlet-name>
        <servlet-class>jee.javapack.servlets.DeleteFilm</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteFilm</servlet-name>
        <url-pattern>/DeleteFilm</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Authentication</servlet-name>
        <servlet-class>jee.javapack.servlets.Authentication</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Authentication</servlet-name>
        <url-pattern>/auth-user</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ServletFilter</filter-name>
        <filter-class>jee.javapack.filter.ServletFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ServletFilter</filter-name>
        <url-pattern>/Login</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>jee.javapack.servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/s</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReserveNow</servlet-name>
        <servlet-class>jee.javapack.servlets.ReserveNow</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReserveNow</servlet-name>
        <url-pattern>/reserve-now</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ReservationHistory</servlet-name>
        <servlet-class>jee.javapack.servlets.ReservationHistory</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationHistory</servlet-name>
        <url-pattern>/reserve-history</url-pattern>
    </servlet-mapping>












    <servlet>
        <servlet-name>ReservationTicket</servlet-name>
        <servlet-class>jee.javapack.servlets.ReservationTicket</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservationTicket</servlet-name>
        <url-pattern>/reservation-ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>jee.javapack.servlets.CommentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/view-now</url-pattern>
    </servlet-mapping>

</web-app>